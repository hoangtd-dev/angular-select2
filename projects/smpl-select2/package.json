{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "@smplfrs/angular-select2",
  "version": "0.0.1-beta.2",
  "scripts": {
    "build": "ng-packagr -p package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smplfrs/angular-select2.git"
  },
  "bugs": {
    "url": "https://github.com/smplfrs/angular-select2/issues"
  },
  "license": "MIT",
  "keywords": [
    "angular",
    "select2",
    "typescript",
    "directive"
  ],
  "peerDependencies": {
    "@angular/common": "~10.0.14",
    "@angular/core": "~10.0.14",
    "jquery": "~3.5.1"
  },
  "dependencies": {
    "select2": "4.0.12"
  },
  "ngPackage": {
    "dest": "../../dist/smpl-select2",
    "lib": {
      "entryFile": "src/public-api.ts"
    },
    "whitelistedNonPeerDependencies": [
      "tslib",
      "select2"
    ]
  },
  "devDependencies": {
    "@angular-devkit/build-ng-packagr": "~0.1000.8",
    "ng-packagr": "^10.1.0"
  }
}
