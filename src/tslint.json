{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "portt",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "portt",
            "kebab-case"
        ],
        "max-line-length": [
            true,
            {
                "limit": 140,
                "ignore-pattern": "^import [^,]+ from"
            }
        ]
    }
}